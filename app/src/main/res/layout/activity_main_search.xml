<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.drnserver.newdogwest.mainSearch">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/mainTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="176dp"
            android:layout_toEndOf="@+id/imageView"
            android:text="New Dog West"
            android:textSize="40dp"
            android:textStyle="bold" />

        <ImageView
            android:layout_marginRight="10dp"
            android:id="@+id/imageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignBottom="@+id/mainTitle"
            android:layout_alignStart="@+id/imageView2"
            app:srcCompat="@drawable/dog" />


        <AutoCompleteTextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mainTitle"
            android:layout_marginTop="35dp"
            android:layout_toEndOf="@+id/imageView2"
            android:ems="13"
            android:inputType="textPersonName"
            android:text="My Location"
            android:hint="Enter Address, City or Zip Code"
            android:textAlignment="center"
            android:dropDownVerticalOffset="360dp"
            android:imeOptions="actionSearch" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_above="@+id/searchButton"
            android:layout_toStartOf="@+id/searchButton"
            app:srcCompat="@drawable/map" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            app:srcCompat="@drawable/west" />

        <Button
            android:id="@+id/searchButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/location"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:backgroundTint="#4f6a96"
            android:ems="15"
            android:text="Search"
            android:textColor="#f7f7f7" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
